{
  "$id": "https://example.com/schemas/objectives-dataset.schema.json",
  "title": "Objectives Dataset",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string"
    },
    "objectives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "objectiveId": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "checks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "kpiId": {
                  "type": "string"
                },
                "comparator": {
                  "type": "string",
                  "enum": [
                    "<=",
                    ">=",
                    "trend_up",
                    "trend_down"
                  ]
                },
                "value": {
                  "type": "number"
                }
              },
              "required": [
                "kpiId",
                "comparator"
              ],
              "allOf": [
                {
                  "if": {
                    "properties": {
                      "comparator": {
                        "const": "<="
                      }
                    }
                  },
                  "then": {
                    "required": [
                      "value"
                    ]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "comparator": {
                        "const": ">="
                      }
                    }
                  },
                  "then": {
                    "required": [
                      "value"
                    ]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "comparator": {
                        "enum": [
                          "trend_up",
                          "trend_down"
                        ]
                      }
                    }
                  },
                  "then": {
                    "not": {
                      "required": [
                        "value"
                      ]
                    }
                  }
                }
              ]
            }
          },
          "evaluationWindow": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "months": {
                "type": "integer",
                "minimum": 1
              },
              "method": {
                "type": "string",
                "enum": [
                  "last",
                  "avg",
                  "trend"
                ]
              }
            },
            "required": [
              "months",
              "method"
            ]
          },
          "difficultyTargets": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "moderate": {
                "type": "object",
                "properties": {
                  "requiredCount": {
                    "type": "integer",
                    "minimum": 1
                  }
                },
                "required": [
                  "requiredCount"
                ],
                "additionalProperties": false
              },
              "severe": {
                "type": "object",
                "properties": {
                  "requiredCount": {
                    "type": "integer",
                    "minimum": 1
                  }
                },
                "required": [
                  "requiredCount"
                ],
                "additionalProperties": false
              },
              "extreme": {
                "type": "object",
                "properties": {
                  "requiredCount": {
                    "type": "integer",
                    "minimum": 1
                  }
                },
                "required": [
                  "requiredCount"
                ],
                "additionalProperties": false
              }
            },
            "required": [
              "moderate",
              "severe",
              "extreme"
            ]
          }
        },
        "required": [
          "objectiveId",
          "label",
          "description",
          "checks",
          "evaluationWindow",
          "difficultyTargets"
        ]
      }
    }
  },
  "required": [
    "objectives"
  ]
}